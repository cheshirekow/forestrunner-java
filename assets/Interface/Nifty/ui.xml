<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />
  
  <style id="nifty-panel-80">
    <attributes padding="8px,16px,24px,16px" backgroundImage="Interface/Nifty/nifty-panel-80.png" imageMode="resize:28,184,28,28,28,184,28,154,28,184,28,58" />
  </style>
  
  <!--  include localized text -->
  <resourceBundle id="disclaimer"   filename = "Interface/Nifty/disclaimer" />
  <resourceBundle id="game"         filename = "Interface/Nifty/game" />
  <resourceBundle id="highscore"    filename = "Interface/Nifty/highscore" />

  <!--  the disclaimer screen, displays the disclaimer and accept/reject buttons -->
  <screen id="disclaimer" controller="edu.mit.lids.ares.forestrunner.screens.DisclaimerScreen">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
      <panel id="panel" style="nifty-panel-80" height="80%" width="80%" align="center" valign="center" childLayout="vertical" visibleToMouse="true">
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
        </effect>
        <text id="text1" width="85%" font="aurulent-sans-16.fnt" text="${disclaimer.text}" color="#ffff" wrap="true" textHAlign="left"/>
        <panel id="button-panel" width="40%" height="20px" align="center" childLayout="horizontal">
            <control id="disclaimer.btn.agree" width="50%" name="button" label="${disclaimer.agree_txt}" />
            <control id="disclaimer.btn.disagree" width="50%"  name="button" label="${disclaimer.disagree_txt}" />
        </panel>
      </panel>
    </layer>
  </screen>
  
  <screen id="countdown3" controller="edu.mit.lids.ares.forestrunner.screens.CountdownScreen">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
        <panel childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" length="500" startDelay="0" inherit="true" onEndEffect="onStep()" />
                <onEndScreen name="fade" start="#ff" end="#00" length="500" startDelay="0" inherit="true"/>
            </effect>
            <image filename="Interface/Nifty/countdown-3.png" />
        </panel>
    </layer>
  </screen>
  
  <screen id="countdown2" controller="edu.mit.lids.ares.forestrunner.screens.CountdownScreen">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
        <panel childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" length="500" startDelay="0" inherit="true" onEndEffect="onStep()" />
                <onEndScreen name="fade" start="#ff" end="#00" length="500" startDelay="0" inherit="true"/>
            </effect>
            <image filename="Interface/Nifty/countdown-2.png" />
        </panel>
    </layer>
  </screen>
  
  <screen id="countdown1" controller="edu.mit.lids.ares.forestrunner.screens.CountdownScreen">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
        <panel childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" length="500" startDelay="0" inherit="true" onEndEffect="onStep()" />
                <onEndScreen name="fade" start="#ff" end="#00" length="500" startDelay="0" inherit="true"/>
            </effect>
            <image filename="Interface/Nifty/countdown-1.png" />
        </panel>
    </layer>
  </screen>

  
  <!--  the game screen, displays instructions and settings -->
  <screen id="game" controller="edu.mit.lids.ares.forestrunner.screens.GameScreen">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
        <panel id="pnl.game" height="90%" width="90%" align="center" valign="center" childLayout="vertical">
            <effect>
	          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
	          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
	        </effect>
            <panel id="pnl.title" style="nifty-panel-80" height="25%" width="80%" align="center" childLayout="center">
                <text id="txt.title" width="100%" font="aurulent-sans-16.fnt" text="${game.title}" color="#ffff"/>
            </panel>
            <panel id="pnl.split" width="100%" height="75%" childLayout="horizontal">
                <panel id="pnl.instructions" style="nifty-panel-80" width="50%" height="50%" childLayout="center">
                    <text id="txt.instructions" width="90%" font="aurulent-sans-16.fnt" text="${game.instructions}" color="#ffff" wrap="true" textHAlign="left"/>
                </panel>
                <panel id="pnl.options" style="nifty-panel-80" width="50%" height="100%" childLayout="vertical">
                    <text id="txt.speed" width="90%" font="aurulent-sans-16.fnt" text="${game.speed}" color="#ffff" wrap="true" align="left" textHAlign="left"/>
                    <control id="sldr.speed"    name="horizontalSlider" width="100%" min="1" max="10" initial="1" stepSize="1" buttonStepSize="1" />
                    <text id="txt.density" width="90%" font="aurulent-sans-16.fnt" text="${game.density}" color="#ffff" wrap="true" align="left" textHAlign="left"/>
                    <control id="sldr.density"  name="horizontalSlider" width="100%" min="1" max="10" initial="1" stepSize="1" buttonStepSize="1" />
                    <text id="txt.radius" width="90%" font="aurulent-sans-16.fnt" text="${game.radius}" color="#ffff" wrap="true" align="left" textHAlign="left"/>
                    <control id="sldr.radius"   name="horizontalSlider" width="100%" min="1" max="10" initial="1" stepSize="1" buttonStepSize="1" />
                    <panel id="pnl.spacer" width="100%" height="20px">
                    </panel>
                    <panel id="pnl.buttons" width="80%" childLayout="horizontal" align="center">
                        <control id="game.btn.new" width="50%" name="button" label="${game.newgame}"/>
                        <control id="game.btn.cancel" width="50%" name="button" label="${game.cancel}"/>
                    </panel>
                </panel>
            </panel>
      </panel>
    </layer>  
  </screen>
  
  <!--  the high score screen, displays high scores -->
  <screen id="highscore" controller="edu.mit.lids.ares.forestrunner.screens.HighScoreScreen">
    <layer id="layer" backgroundColor="#0000" childLayout="center">
      <panel id="pnl.end" style="nifty-panel-80" height="90%" width="90%" align="center" valign="center" childLayout="vertical">
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
        </effect>
        <panel id="pnl.highscore" height="70%" width="100%" align="center" valign="center" childLayout="horizontal">
            <panel id="pnl.personalHigh" style="nifty-panel-80" height="90%" width="50%" childLayout="center">
                <control id="lb.personalHigh" name="listBox" vertical="optional" horizontal="optional" displayItems="10" selection="Multiple" />
            </panel>
            <panel id="pnl.globalHigh" style="nifty-panel-80" height="90%" width="50%" childLayout="center">
                <control id="lb.globalHigh" name="listBox" vertical="optional" horizontal="optional" displayItems="10" selection="Multiple" />
            </panel>
        </panel>
        <panel id="pnl.endButtons" height="30%" width="100%" algin="center" valign="center" childLayout="horizontal">
            <control id="id.playButton" name="button" label="Play Again"/>
        </panel>
      </panel>
    </layer>
  </screen>
</nifty>
