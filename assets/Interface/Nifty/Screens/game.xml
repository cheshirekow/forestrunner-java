                    </panel>
                    <control id="game.btn.advanced" width="90%" height="40px" align="center" name="button" style="forestrunner-button" label="${game.advanced}"/>
                </panel>
                <panel id="pnl.options" width="50%" height="100%" childLayout="vertical">
