<nifty-styles>
	<style id="forestrunner-horizontal-slider#panel">
	  <attributes childLayout="horizontal" height="40px" align="center" focusable="true" />
	</style>
	
	<style id="forestrunner-horizontal-slider#left">
	  <attributes filename="Interface/Nifty/Styles/slider/slider.png" width="40px" height="40px" imageMode="sprite:40,40,6"/>
	  <effect>
	    <onClick name="focus" targetElement="#parent" />
	    <onClick name="imageOverlay" filename="Interface/Nifty/Styles/slider/slider.png" imageMode="sprite:40,40,8" post="true" />
	    <onFocus name="imageOverlay" filename="Interface/Nifty/Styles/slider/slider.png" imageMode="sprite:40,40,7" post="true" />
	    <onHover name="border" color="#822f" post="true" />
	    <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150" />
	    <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150" />
	  </effect>
	</style>
	
	<style id="forestrunner-horizontal-slider#right">
	  <attributes filename="Interface/Nifty/Styles/slider/slider.png" width="40px" height="40px" imageMode="sprite:40,40,9"/>
	  <effect>
	    <onClick name="focus" targetElement="#parent" />
	    <onClick name="imageOverlay" filename="Interface/Nifty/Styles/slider/slider.png" imageMode="sprite:40,40,11" post="true" />
	    <onFocus name="imageOverlay" filename="Interface/Nifty/Styles/slider/slider.png" imageMode="sprite:40,40,10" post="true" />
	    <onHover name="border" color="#822f" post="true" />
	    <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150" />
	    <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150" />
	  </effect>
	</style>
	
	<style id="forestrunner-horizontal-slider#background">
	  <attributes filename="Interface/Nifty/Styles/slider/slider.png" width="*" height="40px" childLayout="absolute" imageMode="sprite:40,40,16" />
	  <effect>
	    <onClick name="focus" targetElement="#parent" />
	  </effect>
	</style>
	
	<style id="forestrunner-horizontal-slider#position">
	  <attributes filename="Interface/Nifty/Styles/slider/slider.png" x="0px" y="0px" width="40px" height="40px" imageMode="sprite-resize:40,40,17,12,16,12,12,12,16,12,16,12,16,12,12" />
	  <effect>
	    <onClick name="focus" targetElement="#parent#parent" />
	    <onFocus name="imageOverlay" filename="Interface/Nifty/Styles/slider/slider.png" imageMode="sprite-resize:40,40,19,12,16,12,12,12,16,12,16,12,16,12,12" post="true" />
	    <onHover name="imageOverlay" filename="Interface/Nifty/Styles/slider/slider.png" imageMode="sprite-resize:40,40,18,12,16,12,12,12,16,12,16,12,16,12,12" post="true" />
	    <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150" />
	    <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150" />
	  </effect>
	</style>
</nifty-styles>